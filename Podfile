# Uncomment the next line to define a global platform for your project
platform :ios, '12.0'

inhibit_all_warnings!

target 'SwiftTestCase' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for SwiftTestCase
  
  # Rx Components
  pod 'RxCocoa', '~> 6.2.0' # Reactive Programming in Swift.
  pod 'RxDataSources', '~> 5.0.0' # Rx Table and Collection view data sources.
  pod 'RxTheme', '~> 6.0.0' # Theme management based on Rx.
  pod 'RxOptional', '~> 5.0.2' # RxSwift extensions for Swift optionals and "Occupiable" types.
  pod 'RxKeyboard', '~> 2.0.0' # RxKeyboard provides a reactive way of observing keyboard frame changes. Forget about keyboard notifications. It also perfectly works with UIScrollViewKeyboardDismissMode.interactive.
  pod 'RxReachability', '~> 1.2.1' # RxReachability adds easy to use RxSwift bindings for ReachabilitySwift. You can react to network reachability changes and even retry observables when network comes back up.
  pod 'RxGesture', '~> 4.0.2' # RxSwift reactive wrapper for view gestures.
  pod 'RxAnimated', '~> 0.9.0' # RxAnimated provides animation interface to RxCocoa's bindings.
  pod 'RxFlow', '2.12.1' # RxFlow is a navigation framework for iOS applications based on a Reactive Flow Coordinator pattern.
  
  # Networking
  pod 'Alamofire', '~> 5.4.4' # Elegant HTTP Networking in Swift.
  pod 'Kingfisher', '~> 7.1.1' # A lightweight, pure-Swift library for downloading and caching images from the web.
  
  # UI
  ## Layout
  pod 'SnapKit', '~> 5.0.1' # SnapKit is a DSL to make Auto Layout easy on both iOS and OS X.

  ## Components
  pod 'Texture', '~> 3.1.0' # Smooth asynchronous user interfaces for iOS apps.
  pod 'MessageKit', '~> 3.7.0' # A community-driven replacement for JSQMessagesViewController.
  pod 'SPPermissions', '~> 6.8.4' # Ask permissions on Swift. Available List, Dialog & Native interface. Can check state permission. Support SwiftUI.
  pod 'paper-onboarding', '~> 6.1.5' # PaperOnboarding is a material design UI slider. Swift UI library by @Ramotion.
  pod 'SkeletonView', '~> 1.25.2' # SkeletonView has been conceived to address this need, an elegant way to show users that something is happening and also prepare them for which contents are waiting.
  pod 'MMNumberKeyboard', '~> 0.3.3' # A simple keyboard to use with numbers and, optionally, a decimal point.
  pod 'ImageViewer', '~> 6.0.0' # A simple and customizable Android full-screen image viewer.
  pod 'YPImagePicker', '~> 4.5.0' # Instagram-like image picker & filters for iOS.
  pod 'RAMAnimatedTabBarController', '~> 5.2.0' # RAMAnimatedTabBarController is a Swift UI module library for adding animation to iOS tabbar items and icons. iOS library made by @Ramotion.
  pod 'XLPagerTabStrip', '~> 9.0.0' # Android PagerTabStrip for iOS.
  pod 'SwipeCellKit', '~> 2.7.1' # Swipeable UITableViewCell/UICollectionViewCell based on the stock Mail.app, implemented in Swift.
  pod 'Cards', '~> 1.4.0' # Awesome iOS 11 appstore cards in swift 5.
  pod 'BulletinBoard', '~> 5.0.0' # General-purpose contextual cards for iOS.
  pod 'CircleMenu', '~> 4.1.0' # CircleMenu is a simple, elegant UI menu with a circular layout and material design animations. Swift UI library made by @Ramotion.
  pod 'LTMorphingLabel', '~> 0.9.3' # A morphing UILabel subclass written in Swift. The .Scale effect mimicked Apple's QuickType animation of iOS 8 of WWDC 2014. New morphing effects are available as Swift extensions.
  pod 'FSPagerView', '~> 0.8.3' # FSPagerView is an elegant Screen Slide Library. It is extremely helpful for making Banner View、Product Show、Welcome/Guide Pages、Screen/ViewController Sliders.
  pod 'Eureka', '~> 5.3.4' # Elegant iOS form builder in Swift.
  
  ## Toasts
  pod 'NVActivityIndicatorView', '~> 5.1.1' # NVActivityIndicatorView is a collection of awesome loading animations.
  pod 'Toast-Swift', '~> 5.0.1' # Toast-Swift is a Swift extension that adds toast notifications to the UIView object class. It is intended to be simple, lightweight, and easy to use. Most toast notifications can be triggered with a single line of code.
  pod 'SwiftEntryKit', '~> 2.0.0' # SwiftEntryKit is a presentation library for iOS. It can be used to easily display overlays within your iOS apps.
  
  ## Animation
  pod 'lottie-ios', '~> 3.2.3' # An iOS library to natively render After Effects vector animations.
  pod 'ViewAnimator', '~> 3.1.0' # ViewAnimator brings your UI to life with just one line.
  pod 'MJRefresh', '~> 3.7.2' # An easy way to use pull-to-refresh.
  
  ## Transition
  pod 'Hero', '~> 1.6.1' # Hero is a library for building iOS view controller transitions. It provides a declarative layer on top of the UIKit's cumbersome transition APIs—making custom transitions an easy task for developers.
  pod 'KMNavigationBarTransition', '1.1.10' # A drop-in universal library helps you to manage the navigation bar styles and makes transition animations smooth between different navigation bar styles while pushing or popping a view controller for all orientations. And you don't need to write any line of code for it, it all happens automatically.
  pod 'FloatingPanel', '~> 2.5.0' # FloatingPanel is a simple and easy-to-use UI component for a new interface introduced in Apple Maps, Shortcuts and Stocks app. The new interface displays the related contents and utilities in parallel as a user wants.
  
  ## Image
  pod 'Macaw', '~> 0.9.7' # Powerful and easy-to-use vector graphics Swift library with SVG support.
  pod 'FLAnimatedImage', '~> 1.0.15' # FLAnimatedImage is a performant animated GIF engine for iOS.
  pod 'APNGKit', '~> 2.0.1' # High performance and delightful way to play with APNG format in iOS.

  # Utilities
  pod 'Then', '~> 2.7.0' # Super sweet syntactic sugar for Swift initializers.
  pod 'DeepDiff', '~> 2.2.0' # 🦀Amazingly incredible extraordinary lightning fast diffing in Swift
  pod 'SQLite.swift', '~> 0.13.0' # A type-safe, Swift-language layer over SQLite3.
  pod 'TPKeyboardAvoiding', '~> 1.3.5' # A drop-in universal solution for moving text fields out of the way of the keyboard in iOS.
  
  # Convenience Tools
  pod 'DeviceKit', '~> 4.5.2' # DeviceKit is a value-type replacement of UIDevice.
  pod 'ResponseDetective', '~> 1.4.0' # ResponseDetective is a non-intrusive framework for intercepting any outgoing requests and incoming responses between your app and your server for debugging purposes.
  pod 'SwiftDate', '~> 6.3.1' # SwiftDate is the definitive toolchain to manipulate and display dates and time zones on all Apple platform and even on Linux and Swift Server Side frameworks like Vapor or Kitura.
  
  # Data Storage & Processing
  pod 'ObjectMapper', '~> 4.2.0' # Simple JSON Object mapping written in Swift.
  pod 'KeychainAccess', '~> 4.2.2' # Simple Swift wrapper for Keychain that works on iOS, watchOS, tvOS and macOS.
  pod 'SSZipArchive', '~> 2.4.2' # Utility class for zipping and unzipping files on iOS, tvOS, watchOS, and macOS.
  pod 'SwiftyUserDefaults', '~> 5.3.0' # SwiftyUserDefaults makes user defaults enjoyable to use by combining expressive Swifty API with the benefits of static typing. Define your keys in one place, use value types easily, and get extra safety and convenient compile-time checks for free.
  pod 'MMWormhole',  :git => 'https://github.com/mutualmobile/MMWormhole.git', :tag => '2.0.10' # Message passing between iOS apps and extensions.
  
  # APM
  pod 'FLEX', '~> 4.6.0' # FLEX (Flipboard Explorer) is a set of in-app debugging and exploration tools for iOS development. When presented, FLEX shows a toolbar that lives in a window above your application. From this toolbar, you can view and modify nearly every piece of state in your running application.
  pod 'matrix-wechat', '~> 1.0.1' # Matrix is a plugin style, non-invasive APM system developed by WeChat.
  
  # Linter
  pod 'SwiftLint', '~> 0.45.0' # A tool to enforce Swift style and conventions.
  
  # Code Quality
  pod 'SwiftFormat/CLI', '~> 0.48.18' # A command-line tool for formatting Swift code.
  
  # Google Service
  # add the Firebase pod for Google Analytics
  # pod 'Firebase/Analytics'
  # pod 'Firebase/Auth'
  # pod 'Firebase/Firestore'
  # add pods for any other desired Firebase products
  # https://firebase.google.com/docs/ios/setup#available-pods

  target 'SwiftTestCaseTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'SwiftTestCaseUITests' do
    # Pods for testing
  end

end
 
# Deployment Target Version
post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
    end
  end
end
